rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Subcollections under users
      match /notes/{noteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /tasks/{taskId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /settings/{settingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Public read-only collections
    match /public/{documentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Test collection (temporary)
    match /test/{documentId} {
      allow read, write: if request.auth != null;
    }
    
    // Global app data (admin only)
    match /app/{documentId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // Helper function to check admin
    function isAdmin(uid) {
      return uid in ['admin-uid-1', 'admin-uid-2']; // Ganti dengan UID admin
    }
  }
}
