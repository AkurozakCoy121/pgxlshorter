{
  "rewrites": [
    // Route 1: Homepage → index.html
    { "source": "/", "destination": "/index.html" },
    
    // Route 2: Short URLs → redirect-page.html  
    // (hanya untuk kode alfanumerik 3-10 karakter)
    { 
      "source": "/([a-zA-Z0-9]{3,10})", 
      "destination": "/redirect-page.html" 
    }
  ],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}
